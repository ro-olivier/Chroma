<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/StepLinearLayout">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/unit_input_tripstep"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/TripPrice"
            android:hint="@string/HintTripPrice"
            android:textSize="@dimen/input_text"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:textColor="@color/colorText"
            android:gravity="center_vertical|end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/Currency"
            android:textSize="@dimen/input_text"
            android:paddingEnd="@dimen/half_activity_vertical_margin"
            android:paddingStart="@dimen/half_activity_vertical_margin"
            android:textColor="@color/colorText"
            android:gravity="center_vertical|start"/>

    </LinearLayout>
</LinearLayout>